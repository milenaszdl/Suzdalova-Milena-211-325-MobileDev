<Window x:Class="wpfPageViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfPageViewer"
        mc:Ignorable="d"
        Title="Редактор страниц" Height="450" Width="800">
    <StackPanel Orientation="Horizontal">
        <StackPanel Orientation="Vertical" >
            <StackPanel.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Margin" Value="0,50,0,0"/>
                </Style>
            </StackPanel.Resources>
            <Button Content="Новая страница" Click="NewPage_Click"/>
            <Button Content="Просмотр страниц"/>
            <Button Content="Очистить страницу"/>
        </StackPanel>
        <StackPanel>
            <Image/>
        </StackPanel>
    </StackPanel>
</Window>
